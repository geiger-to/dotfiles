[color]
	ui = true
[alias]
	co = checkout
	rb = pull --rebase
	aa = add -A
	amend = commit --amend
	issue = checkout -t origin/master -b
	cleanup = !git branch --merged | grep -v "master" | xargs git branch -D
[push]
	default = current
[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	safecrlf = false
[help]
	autocorrect = -1

