[color]
	ui = true
[alias]
	co = checkout
	rb = pull --rebase
	aa = add -A
	amend = commit --amend
	cleanup = !git branch --merged | grep -v "main" | xargs git branch -D
[push]
	default = current
[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	safecrlf = false
[help]
	autocorrect = -1

[user]
	name = Jon Geiger
	email = git@geiger.to

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
